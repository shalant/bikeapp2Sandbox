@page
@model BikeApp.Pages.BikeRoutes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="BikeRouteDirection" asp-items="Model.Directions">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Fitler" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].Elevation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].Direction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].StravaLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeRoute[0].MapUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BikeRoute) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elevation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StravaLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapUrl)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
